<% @page_title = "Teletrack - Login" %>
<%= form_tag sessions_path do %>
<table width="100%">
	<tr>
    	<td id="login" align="right"><%= label_tag :user_name %></td>
    	<td id="login" align="left"><%= text_field_tag :name, params[:name] %></td>
    </tr>
    <tr>
    	<td id="login" align="right"><%= label_tag :password %></td>
    	<td id="login" align="left"><%= password_field_tag :password %></td>
    </tr>
	<tr>
		<td id="login" align="right"></td>
    	<td id="login" align="left" class="button"><%= submit_tag "Log in" %></td>
	</tr>
</table>
<% end %>